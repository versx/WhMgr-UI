{{> header}}

{{> navbar}}

<br>
<div class="alert alert-danger w-75 d-none" style="float: none; margin: 0 auto;">
    <div id="error"></div>
</div>

<h1 align="center" id="header">{{Quests}}</h1>
<br>
<div style="width:90%; margin-left:calc(5%);">
    <a href="/quests/delete_all" role="button" style="float: right; margin-left: 5px;" class="btn btn-danger">{{Delete All}}</a>
    <a href="/quest/new" role="button" style="float: right; margin-right: 5px;" class="btn btn-success">{{New Quest Subscription}}</a>
    <br><br>
    <table id="table" class="table {{table_class}} table-sm table-striped table-bordered table-hover dt-responsive nowrap" style="position: center; width:100%">
        <thead class="thead-dark">
            <tr>
                <th class="all">{{Pokestop Name}}</th>
                <th class="all">{{Reward}}</th>
                <th class="all">{{City}}</th>
                <th class="min-desktop">{{Location}}</th>
                <th class="all" width="5%"></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<br>

{{> footer}}

<script type='text/javascript'>
    if (!guildId) {
        window.location.href = '/';
    }
    showError('Select a server from the dropdown menu before creating/editing/deleting any subscriptions!');
    const table = $('#table').DataTable( {
        "ajax": {
            "url": "/api/server/" + $('#server_selector').val() + "/user/{{user_id}}?type=quests",
            "dataSrc": "data.quests",
            "async": true,
            "type": "POST",
        },
        //"dom": "Bfrtip",
        // Reference: https://stackoverflow.com/a/43176143
        /*
        "dom": "<'row'<'col-sm-8'B><'col-sm-4'f>t>" +
                "<'row'<'col-sm-4'li><'col-sm-8'p>>",
        */
        "dom": "<'row'<'col-sm-12 col-md-6'B><'col-sm-12 col-md-6'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
        "fixedHeader": {
            "header": true,
            "headerOffset": $('.navbar').height() + 15,
        },
        "buttons": [
            "colvis",
            "pageLength",
        ],
        "colReorder": true,
        "stateSave": true,
        "paging":   true,
        "lengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
        "pageLength": 100,
        "columns": [
            { "data": "pokestop_name" },
            { "data": "reward" },
            { "data": "city" },
            { "data": "location" },
            { "data": "buttons" },
        ],
        "info": true,
        "order": [[ 0, "asc" ]],
        "search.caseInsensitive": true,
        "columnDefs": [{
            "targets": [4],
            "orderable": false,
        }],
        "responsive": true,
    });

    function refreshData() {
        $("#table").DataTable().ajax.url("/api/server/" + $('#server_selector').val() + "/user/{{user_id}}?type=quests").load();
    }
</script>